<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="currentItem"
            type="com.example.google.firebase.FirebaseViewModelItem"/>
    </data>
    <LinearLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCC"
        android:layout_margin="2dp">

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:id="@+id/message"
            android:text="@{currentItem.dataSnapshot.child(`message`).getValue()}"
            app:onFocusChangeListener="@{currentItem.updateOnLostFocus(`message`)}"
            tools:text="message"
            android:background="@android:color/white"
            android:enabled="true"
            android:textStyle="bold"
            android:singleLine="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:id="@+id/user"
            android:text="@{currentItem.dataSnapshot.child(`date`).getValue()}"
            tools:text="user"
            android:background="@android:color/white"
            android:enabled="false"
            android:textStyle="italic"
            android:singleLine="true" />
    </LinearLayout>
</layout>